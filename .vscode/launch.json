    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable": "./BLDC_F103RCT6.elf",
            "name": "JLink",
            "request": "launch",
            "type": "cortex-debug",
            "device": "stm32f103rc",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "serverArgs": ["-speed", "10000"],
            "swoConfig":
            {
                "enabled":true,
                "source":"probe",
                "swoFrequency": 1000000,
                "cpuFrequency":72000000,
                "decoders": [
                    {
                        "type": "console",
                        "port": 0,
                        "label": "SWO output",
                        "encoding":"ascii",
                        //"graphId": "1"
                    }
                ]
            },
            /*"graphConfig": 
            [
                {
                    "label": "Speed",
                    "timespan": 3,
                    "type":"realtime",
                    "annotate": false,
                    "maximum": 255,
                    "minimum": 0,
                    "plots": 
                    [
                        {
                            "graphId": "1",
                            "label": "speed",
                            "color": "#53753c"
                        }
                    ]
                }
            ],*/
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4,
            }
        },
        {
            "cwd": "${workspaceRoot}",
            "executable": "./BLDC_F103RCT6.elf",
            "name": "OpenOCD",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": ["target/stm32f1x.cfg"],
            "searchDir": [],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "device": "STM32F103RC"
        },
        {
            "name": "PyOCD",
            "cwd": "${workspaceFolder}",
            "executable": "./BLDC_F103RCT6.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "pyocd",
            "targetId": "STM32F103RC"
        }
    ]
}